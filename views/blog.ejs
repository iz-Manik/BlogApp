<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include ('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="img-fluid" alt="<%= blog.title %>" width="700px">
        <pre class="mt-4"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %> width="50px" alt="<%= blog.createdBy.fullName %>">
    </div>

    <div class="container mt-3">
        <h3>Comments</h3>
        <form action="/blogs/<%= blog._id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea name="comment" id="comment" class="form-control" rows="3" placeholder="Enter your comment"></textarea>
            </div>
        </form>
    </div>
    <%- include ('./partials/scripts') %>
</body>
</html>
